@{
    ViewBag.Title = "Search Results";
}
<div id="results_filters">
<form>
<button type="button" data-state="1" data-type_to_toggle="CaseStudy" data-type_for_label =" Case Studies" class="toggle" > Hide Case Studies </button>
<br>
<button type="button" data-state="1"  data-type_to_toggle="Intervention" data-type_for_label=" Interventions" class="toggle" > Hide Interventions </button>

</form>


</div>

<div id="results_content">
@{foreach(PTProject.AbstractClasses.Searchable el in ViewBag.results)
  {
    <p class ="@el.GetType().Name">
        <a><em>@el.title</em></a><br />
        @Html.Raw(el.short_content())
    </p>
  }
        
}

</div>