<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @{  if(File.Exists(Request.MapPath("~/Content/css/"+ViewContext.RouteData.Values["controller"].ToString().ToLower()+"/"+ ViewContext.RouteData.Values["action"].ToString().ToLower()+".css")))
        {
          <link href="@Url.Content("~/Content/css/"+ViewContext.RouteData.Values["controller"].ToString().ToLower()+"/"+ ViewContext.RouteData.Values["action"].ToString().ToLower()+".css")" type="text/css" rel="stylesheet" />
        } 
      }
    <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/"+ViewContext.RouteData.Values["controller"].ToString().ToLower()+"/"+ ViewContext.RouteData.Values["action"].ToString().ToLower()+".js")" type="text/javascript"> </script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>Medically Complex Patient Database </h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About MCPD", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
            @if (Request.IsAuthenticated)
            {
               @Html.Partial("_rightPanel");
            }
        </section>
        <div class="clear"></div>
        <footer>
            @Html.Partial("_footer")
        </footer>
    </div>
</body>
</html>
